<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llPlaceItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/sm_4"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPlace"
        android:layout_width="@dimen/md_6"
        android:layout_height="@dimen/md_4"
        android:layout_gravity="center"
        android:contentDescription="@string/place_s_image"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_image_placeholder_240" />

    <LinearLayout
        android:id="@+id/llPlaceInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/sm_4"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/sm_2"
            android:textColor="@color/indigo_500"
            android:textSize="@dimen/text_base"
            tools:text="Title" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/indigo_500"
            android:textSize="@dimen/text_sm"
            tools:text="description" />

    </LinearLayout>
</LinearLayout>
